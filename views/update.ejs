    <form action ="/update/<%=a %>/show" method="post">
        <section class="intro">
      <div class="mask d-flex align-items-center h-100" style="background-color: #D6D6D6;">
        <div class="container">
          <div class="row justify-content-center">
            <div class="col-16 col-md-8 col-lg-6 col-xl-5">
              <div class="card" style="border-radius: 1rem;">
                <div class="card-body p-5 text-center">
    
                  <div class="my-md-5 pb-5">
    
                    <h1 class="fw-bold mb-0">Update Information</h1>
    
                    <i class="fas fa-user-astronaut fa-3x my-5"></i>
    
                    <div class="form-outline mb-4">
                      <input type="string" id="name" name="FILE" class="form-control form-control-lg" />
                      <label class="form-label" for="name">Update your file number</label>
                    </div>
    
                    <div class="form-outline mb-5">
                      <input type="string" id="board" name="cup" class="form-control form-control-lg" />
                      <label class="form-label" for="board">Update Cupborad Number</label>
                    </div>

                    <div class="form-outline mb-5">
                        <input type="string" id="shelf Number" name="shelf" class="form-control form-control-lg" />
                        <label class="form-label" for="shelf Number">Update Shelf Number</label>
                    </div>

                    <div class="form-outline mb-5">
                        <input type="description" id="subject" name="status" class="form-control form-control-lg" />
                        <label class="form-label" for="subject">Change Status</label>
                    </div>
    
                    <button class="btn btn-primary btn-lg btn-rounded gradient-custom text-body px-5" type="submit">Submit</button>
    
                  </div>
    
                  
    
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>
    </section>
    </form>
    
